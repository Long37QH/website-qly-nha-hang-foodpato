@model food_pato.Models.Menu
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2> Xác Nhận Xoá Menu</h2>
    </div>
    <div class="from-row">
        <div class="from-group col-md-6">
            <label asp-for="MenuID">MenuID</label>
            <input type="text" class="from-control mb-3" asp-for="MenuID" disabled />
        </div>
        <div class="from-group col-md-6">
            <label asp-for="TenMenu">MenuName</label>
            <input type="text" class="from-control mb-3" asp-for="TenMenu" disabled />
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MenuID" />
        <a class=" btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash-fill"></i>Xoá Menu
        </button>
    </form>
</main>