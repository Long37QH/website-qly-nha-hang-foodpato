@model food_pato.Models.OurMenu;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận sửa món</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Sửa món</h2>
        </div>
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="All"></div>

 
            <div class="form-row">
                <input type="text" class="form-control mb-3" asp-for="OurID" type="hidden" />
                <div class="form-group col-md-6">
                    <label asp-for="TieuDe">Tên</label>
                    <input type="text" class="form-control mb-3" asp-for="TieuDe" placeholder="Nhap ten" />
                    <span asp-validation-for="TieuDe" class="alert-danger"></span>
                </div>

                 <div class="form-group col-md-6">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="MenuID">MenuID</label>
                    <select asp-for="MenuID" class="form-control" asp-items="@(new SelectList(ViewBag.mkList,"Value", "Text"))"></select>
                </div>
                <div class="form-group col-md-6">
                    <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                    <label asp-for="CapCha">Danh mục món</label>
                    <select asp-for="CapCha" class="form-control" asp-items="@(new SelectList(ViewBag.mnList,"Value", "Text"))">
                        <option value="0">Danh Mục</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Cap">Phân muc</label>
                    <select asp-for="Cap" class="form-select" id="Cap">
                        <option value="1">Danh Mục</option>
                        <option value="2">Món Ăn</option>
                    </select>
                </div>
                
                <div class="from-group col-md-12">
                    <label class="control-label">Hình ảnh</label>
                    <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <button class="btn btn-success" type="button" onclick="openDialog()">Chọn hình ảnh</button>
                    </div>
                    <input type="text" class="form-control" asp-for="HinhAnh" id="file_input" aria-describedby="button-addon2">
                </div>
                </div>
                
                <div class="form-group col-md-12">
                    <label asp-for="TomTatBV">Tóm tắt món ăn</label>
                    <input type="text" class="form-control mb-3" asp-for="TomTatBV">
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="GiaBan">Giá bán</label>
                    <input type="text" class="form-control mb-3" asp-for="GiaBan">
                </div>

                
                <div class="form-group col-md-6">
                    <label asp-for="ThuTuBV">Vị trí</label>
                    <input type="text" class="form-control mb-3" asp-for="ThuTuBV" placeholder="Enter MenuOrder" />
                    <span asp-validation-for="ThuTuBV" class="alert-danger"></span>
                </div>
                
                
                
                <div class="form-group mt-3 mb-5">
                    <label>
                        @Html.CheckBox("TrangThaiHD",Model.TrangThaiHD)
                        Hien thi
                    </label>
                </div>
            </div>
            <button type="submit" class=" btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Luu</button>
            <a asp-controller="OurMenu" asp-action="Index" class=" btn btn-lg btn-warning p-2">Quay lai</a>
        </form>
    </div>
</main>

@{
    var summerNote = new food_pato.Areas.Admin.Models.SummerNote("#NoiDung");
    <partial name="_SummerNote" model="summerNote" />
}

