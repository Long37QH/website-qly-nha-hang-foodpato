@using food_pato.Models;
@model IList<OurMenu>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>DANH SÁCH MÓN ĂN</h2>
    </div>
    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="OurMenu" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1"></i>Thêm món ăn
        </a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">STT</th>
                                    <th class="col-2 text-center">Tên món</th>
                                    <th class="col-3 text-center">Mô tả</th>
                                    
                                    <th class="col-2 text-center">Hình ảnh</th>
                                    
                                    <th class="col-2 text-center">Danh Mục</th>
                                    <th class="col-2 text-center">Giá bán</th>
                                    <th class="col-1 text-center">ẩn / hiện</th>
                                    <th class="col-1 text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row">@item.OurID</th>
                                        <td>
                                            <a asp-area="Admin" asp-controller="OurMenu" asp-action="Details"
                                           asp-route-id="@item.OurID" class="text-primary">@item.TieuDe</a>
                                        </td>
                                        <td class="text-center">@item.TomTatBV</td>
                                        
                                        <td class="text-center">@item.HinhAnh</td>
                                        
                                        <td class="text-center">@item.Cap</td>
                                        <td class="text-center">@item.GiaBan</td>
                                        <td class="text-center">@item.TrangThaiHD</td>
                                        <td class="text-center">

                                            <a asp-area="Admin" asp-controller="OurMenu" asp-action="Edit"
                                           asp-route-id="@item.OurID" class="btn btn-primary btn-sm"
                                           title="Sửa nội dung bài viết"><i class="bi bi-pencil"></i></a>

                                            <a asp-area="Admin" asp-controller="OurMenu" asp-action="Delete"
                                           asp-route-id="@item.OurID" class="btn btn-danger btn-sm"
                                           title="Xoá thông tin bài viết"><i class="bi bi-trash"></i></a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
