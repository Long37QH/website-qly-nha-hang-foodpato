 @using food_pato.Areas.Admin.Models
 @model IList<AdminMenu>
 
<!-- ======= Sidebar ======= -->
<aside id="sidebar" class="sidebar">

    <ul class="sidebar-nav" id="sidebar-nav">

        <li class="nav-item">
            <a class="nav-link " asp-controller="DatBan" asp-action="Index">
                <i class="bi bi-grid"></i>
                <span>Thanh công cụ</span>
            </a>
        </li><!-- End Dashboard Nav -->
        @foreach (var item in Model.Where(m => m.ItemLevel == 1 ).OrderBy(n => n.ItemOrder))
        {
            var Pid = item.AdminMenuID;
            var Smenu = Model.Where(p => p.ParentLevel == Pid).OrderBy(p => p.ItemOrder).ToList();


            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#@item.ItemTarget" data-bs-toggle="collapse" href="#">
                    <i class="@item.Icon"></i><span>@item.ItemName</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="@item.IdName" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    @foreach (var smn in Smenu)
                    {
                        <li>
                            <a href="/Admin/@smn.ControllerName/@smn.ActionName">
                                <i class="bi bi-circle"></i><span>@smn.ItemName</span>
                            </a>
                        </li>
                    }
                </ul>
            </li>
        }

        <li class="nav-heading">Pages</li>

        <li class="nav-item">
            <a class="nav-link collapsed" href="https://localhost:7069/Home">
                <i class="bi bi-house-door"></i>
                <span>Trang Chủ</span>
            </a>
        </li><!-- End Profile Page Nav -->

        <li class="nav-item">
            <a class="nav-link collapsed" href="https://localhost:7069/ourmenu-3">
                <i class="bi bi-card-checklist"></i>
                <span>Thực Đơn</span>
            </a>
        </li><!-- End F.A.Q Page Nav -->

        <li class="nav-item">
            <a class="nav-link collapsed" href="https://localhost:7069/DatBan">
                <i class="bi bi-bookmarks"></i>
                <span>Đặt Bàn</span>
            </a>
        </li><!-- End Contact Page Nav -->

        <li class="nav-item">
            <a class="nav-link collapsed" href="https://localhost:7069/decover-romantic-restaurant-3.html">
                <i class="bi bi-pencil"></i>
                <span>Giới Thiệu</span>
            </a>
        </li><!-- End Register Page Nav -->

        <li class="nav-item">
            <a class="nav-link collapsed" href="https://localhost:7069/listblog-blog-5.html">
                <i class="bi bi-inboxes"></i>
                <span>Blog</span>
            </a>
        </li><!-- End Login Page Nav -->


    </ul>

</aside><!-- End Sidebar-->